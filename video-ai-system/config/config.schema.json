{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Schema for AI Video Analysis System",
  "description": "Defines the structure for the system's configuration files.",
  "type": "object",
  "properties": {
    "system_modules": {
      "description": "Configuration for the system's modules.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the module.",
            "type": "string"
          },
          "config": {
            "description": "Module-specific configuration.",
            "type": "object",
            "properties": {},
            "additionalProperties": true
          }
        },
        "required": ["name", "config"]
      }
    },
    "qdrant": {
      "description": "Configuration for the Qdrant vector database connection.",
      "type": "object",
      "properties": {
        "host": {
          "description": "The hostname or IP address of the Qdrant instance.",
          "type": "string"
        },
        "port": {
          "description": "The port number for the Qdrant instance.",
          "type": "integer"
        }
      },
      "required": ["host", "port"]
    },
    "logging": {
      "description": "Configuration for system-wide logging.",
      "type": "object",
      "properties": {
        "level": {
          "description": "The logging level.",
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
        }
      },
      "required": ["level"]
    }
  },
  "required": ["system_modules", "qdrant", "logging"]
}
